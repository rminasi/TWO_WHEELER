
<div class="bike-show">
  <div class="bike-image">
    <%= image_tag @bike.image %>
  </div>
  <div class="bike-content">
    <h1><%= @bike.name %></h1>
    <p><%= @bike.description %></p>
    <p><%= @bike.price_per_day %></p>
    <%= render "bookings/new", bike: @bike, booking: @booking %>
  </div>
</div>
