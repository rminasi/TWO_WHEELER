<h1>Bikes</h1>


<div class="bikes">
  <div class="bikes-cards">
    <% Bike.all.each do |bike| %>
      <div class="bike-card">
        <div class="card-product">
          <%= cl_image_tag(bike.image,
              width: 400, height: 300, crop: :fill) %>
          <div class="card-product-infos">
            <h2><%= bike.name %></h2>
            <p><%= bike.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="bikes-map">
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>




<style>
  .bikes {
    height: 100%;
    width: 100%;
    display: flex;
  }

  .bikes-cards {
    height: 100vh;
    width: 100%;
  }

  .bike-card {
    height: 200px;
    width: 150px;
  }

  .bikes-map {
    height: 100vh;
    width: 100%;
  }

  .card-product img {
    height: 200px;
    width: 400px;
  }
</style>
